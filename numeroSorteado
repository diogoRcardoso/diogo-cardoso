Console.WriteLine("Olá! Bem vindo ao meu jogo! Vamos sortear um número de 0 até 10 e você vai ter que adivinhar qual é.\n");

// Sorteia o número
Random random = new Random();
int numeroSorteado = random.Next(11); // 0 -> 10

int numeroDigitado;

// Loop para garantir que o usuário digite um número válido
while (true)
{
    Console.Write("Digite qual número você acha que foi sorteado (de 0 até 10): ");

    // Tenta converter a entrada do usuário para número
    if (int.TryParse(Console.ReadLine(), out numeroDigitado))
    {
        // Verifica se está no intervalo correto
        if (numeroDigitado >= 0 && numeroDigitado <= 10)
        {
            break; // entrada válida → sai do loop
        }
        else
        {
            Console.WriteLine("Número fora do intervalo! Digite um número entre 0 e 10.\n");
        }
    }
    else
    {
        Console.WriteLine("Entrada inválida! Digite apenas números.\n");
    }
}

// Comparação final
if (numeroDigitado == numeroSorteado)
{
    Console.WriteLine($"\n Você acertou! O número era {numeroSorteado}.");
}
else
{
    Console.WriteLine($"\n Você errou... O número sorteado foi {numeroSorteado}.");
}
