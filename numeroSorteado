Console.WriteLine("OlÃ¡! Bem vindo ao meu jogo! Vamos sortear um nÃºmero de 0 atÃ© 10 e vocÃª vai ter que adivinhar qual Ã©.\n");

// Sorteia o nÃºmero
Random random = new Random();
int numeroSorteado = random.Next(11); // 0 -> 10

int numeroDigitado;

// Loop para garantir que o usuÃ¡rio digite um nÃºmero vÃ¡lido
while (true)
{
    Console.Write("Digite qual nÃºmero vocÃª acha que foi sorteado (de 0 atÃ© 10): ");

    // Tenta converter a entrada do usuÃ¡rio para nÃºmero
    if (int.TryParse(Console.ReadLine(), out numeroDigitado))
    {
        // Verifica se estÃ¡ no intervalo correto
        if (numeroDigitado >= 0 && numeroDigitado <= 10)
        {
            break; // entrada vÃ¡lida â†’ sai do loop
        }
        else
        {
            Console.WriteLine("NÃºmero fora do intervalo! Digite um nÃºmero entre 0 e 10.\n");
        }
    }
    else
    {
        Console.WriteLine("Entrada invÃ¡lida! Digite apenas nÃºmeros.\n");
    }
}

// ComparaÃ§Ã£o final
if (numeroDigitado == numeroSorteado)
{
    Console.WriteLine($"\nðŸŽ‰ PARABÃ‰NS! VocÃª acertou! O nÃºmero era {numeroSorteado}.");
}
else
{
    Console.WriteLine($"\nðŸ˜¢ VocÃª errou... O nÃºmero sorteado foi {numeroSorteado}.");
}
